{
 "kind":"PersistentVolume",
 "apiVersion":"v1",
 "metadata":{
  "name":"myapp-mongo-pv",
  "labels":{
    "type":"myapp-mongo"
  }
 },
 "spec":{
  "capacity":{
   "storage":"15Gi"
  },
  "accessModes":[
   "ReadWriteMany"
  ],
  "persistentVolumeReclaimPolicy":"Retain",
  "nfs":{
   "server":"10.11.12.13",
   "path":"/export/myapp_db"
  }
 }
}

